<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Personal Information Validations" verbose="1" parallel="tests">

    <test name="Validate the Personal Information Test English">
        <parameter name="data-set" value="data/profile_information_data_set_en.xml"/>
        <classes>
            <class name="com.canadalife.automation.grsoe.sprinttests.ProfileInformationTest"/>
        </classes>
    </test>

    <test name="Validate the Personal Information Test French">
        <parameter name="data-set" value="data/profile_information_data_set_fr.xml"/>
        <classes>
            <class name="com.canadalife.automation.grsoe.sprinttests.ProfileInformationTest"/>
        </classes>
    </test>

    <test name="Validate the Plan Change Warning Message Information Test English">
        <parameter name="data-set" value="data/plan_change_data_set_en.xml"/>
        <classes>
            <class name="com.canadalife.automation.grsoe.sprinttests.PlanSwitchTest"/>
        </classes>
    </test>

    <test name="Validate the Plan Change Warning Message Information Test French">
        <parameter name="data-set" value="data/plan_change_data_set_fr.xml"/>
        <classes>
            <class name="com.canadalife.automation.grsoe.sprinttests.PlanSwitchTest"/>
        </classes>
    </test>
</suite>