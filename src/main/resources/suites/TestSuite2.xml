<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Contributions Validation Suite English" verbose="1" parallel="methods">

    <test name="Validate Dynamic Status Labels and Steps for NRSP English Account">
        <parameter name="data-set" value="data/plan_data_set_en.xml"/>
        <parameter name="data-set2" value="data/plan_data_set_en_NRSP.xml"/>
        <classes>
            <class name="com.canadalife.automation.grsoe.sprinttests.PlanDynamicStatusBarTest"/>
        </classes>
    </test>

    <test name="Validate Dynamic Status Labels and Steps for NRSP French Account">
        <parameter name="data-set" value="data/plan_data_set_fr.xml"/>
        <parameter name="data-set2" value="data/plan_data_set_fr_NRSP.xml"/>
        <classes>
            <class name="com.canadalife.automation.grsoe.sprinttests.PlanDynamicStatusBarTest"/>
        </classes>
    </test>

    <test name="Validate Dynamic Status Labels and Steps for RPP English Account">
        <parameter name="data-set" value="data/plan_data_set_en.xml"/>
        <parameter name="data-set2" value="data/plan_data_set_en_RPP.xml"/>
        <classes>
            <class name="com.canadalife.automation.grsoe.sprinttests.PlanDynamicStatusBarTest"/>
        </classes>
    </test>

    <test name="Validate Dynamic Status Labels and Steps for RPP French Account">
        <parameter name="data-set" value="data/plan_data_set_fr.xml"/>
        <parameter name="data-set2" value="data/plan_data_set_fr_RPP.xml"/>
        <classes>
            <class name="com.canadalife.automation.grsoe.sprinttests.PlanDynamicStatusBarTest"/>
        </classes>
    </test>
    <test name="Validate Contribution Account Details for the Plans for English Account">
        <parameter name="data-set" value="data/plan_data_set_contributions_en_rpp.xml"/>
        <parameter name="data-set2" value="data/plan_data_set_contributions_en_nrsp.xml"/>
        <parameter name="data-set3" value="data/plan_data_set_contributions_en_rrsp.xml"/>
        <parameter name="data-set4" value="data/plan_data_set_contributions_en_dpsp.xml"/>
        <parameter name="data-set5" value="data/plan_data_set_contributions_en_tfsa.xml"/>
        <classes>
            <class name="com.canadalife.automation.grsoe.sprinttests.PlanContributionsTest"/>
        </classes>
    </test>

</suite>